<%- include('partials/_header');%>
  <title>TinyApp - My TinyURLs</title>
</head>
<body>
  <header><%- include('partials/_navbar');%></header>
  <main style="margin: 1em;">
    <h3>My URLs</h3>
    <div class="table-responsive-lg">
    <table class="table table-hover table-fixed">
      <thead>
        <tr>
          <th scope="col">Short URL</th>
          <th scope="col">Long URL</th>
          <th scope="col">Date Created</th>
          <th scope="col">Number of Visits</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for(let url in urls) { %>
          <tr>
            <form >
            <td><a href="/u/<%= url %>" target="_blank"><%= url %></a></td>
            <td><%= urls[url].longURL %></td>
            <td><%= urls[url].dateCreated%></td>
            <td><%= urls[url].numberVisits%></td>
            <td>
              <button id= "<%=url%>_edit" type="submit" formaction= "<%=`/urls/${url}`%>", formmethod="GET" class="btn btn-info">Edit</button>
            </td>
            <td>
              <button id= "<%=url%>_delete" type="submit" formaction= "<%=`/urls/${url}?_method=DELETE`%>", formmethod="POST" class="btn btn-danger">Delete</button>
            </td>
          </form>
          </tr>
          <% } %>
      </tbody>
    </table>
  </div>
  </main>
  <%- include('partials/_footer');%>