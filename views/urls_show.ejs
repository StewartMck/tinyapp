<%- include('partials/_header');%>
  <title>TinyApp - Edit</title>
</head>
<body>
  <header><%- include('partials/_navbar'); %></header>
  <% if(!ownsURL) { %>
    <div class="alert alert-danger" role="alert">
     You are not authorized to view <b><%=shortURL%></b> or it does not exist.
    </div>
  <% } else { %>
    <div class="card text-center">
      <div class="card-header"></div>
      <div class="card-body">
        <h5 class="card-title"><%= longURL %></h5>
        <p class="card-text">TinyURL: <b><a href="/u/<%= shortURL %>" target="_blank"><%= shortURL %></a></b></p>
      </div>
      <div class="card-footer text-muted">
        <h2 class="card-title">Edit</h2>
        <form class="form-inline justify-content-center" action="<%`/urls/${shortURL}`%>?_method=PUT"   method="POST">
          <label>New URL:</label>
          <input type="text" name="longURL" placeholder="<%=longURL%>" style="width: 300px; margin: 1em"></input>
          <button type="submit" class="btn btn-primary btn-lg">Submit</button>
        </form>
      </div>
    </div>
  <% } %>
  <%- include('partials/_footer');%>